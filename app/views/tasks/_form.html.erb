<%= simple_form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title, "Enter new task" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, "Enter task's details" %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :deadline, as: :string, required: false, input_html: {class: "datepicker"} %> <br>

    <%= f.label :completed, "Mark if completed" %>
    <%= f.check_box :completed %> <br>

    <%= f.submit class: 'btn btn-primary' %></p>
  </div>

<% end %>

<%= link_to "Back to Tasks", tasks_path %>
