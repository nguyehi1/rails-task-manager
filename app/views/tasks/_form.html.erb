<%= form_for(@task) do |f| %>
  <div class="form-group">
    <p><%= f.label :title, "Enter new task" %>
    <%= f.text_field :title, class: 'form-control'  %></p>

    <p><%= f.label :details, "Enter task's details" %>
    <%= f.text_field :details, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :completed, "Mark if completed" %>
    <%= f.check_box :completed %> <br>

    <%= f.submit class: 'btn btn-primary' %></p>
  </div>

<% end %>


